# Chess API Configuration
# Copy this file to .env.local and customize as needed

# Chess API endpoint (default: wss://chess-api.com/v1)
NEXT_PUBLIC_CHESS_API_URL=wss://chess-api.com/v1

# Search depth for the chess engine (1-18, higher = stronger but slower)
# Depth 12 ≈ 2350 elo, Depth 18 ≈ 2750 elo
NEXT_PUBLIC_CHESS_API_DEPTH=12

# Number of variant lines to consider (1-5)
NEXT_PUBLIC_CHESS_API_VARIANTS=1

# Maximum thinking time in milliseconds (1-100)
NEXT_PUBLIC_CHESS_API_MAX_THINKING_TIME=50

# Enable fallback to local engine if API fails (not implemented yet)
NEXT_PUBLIC_CHESS_API_FALLBACK_ENABLED=true

# Number of reconnection attempts before giving up
NEXT_PUBLIC_CHESS_API_MAX_RECONNECTS=3
